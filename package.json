{
  "name": "@ssshooter/epubjs",
  "version": "0.3.93",
  "publishConfig": {
    "access": "public"
  },
  "description": "Parse and Render Epubs",
  "main": "lib/index.js",
  "module": "src/index.js",
  "types": "types/index.d.ts",
  "repository": "https://github.com/futurepress/epub.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "karma start --single-run --browsers ChromeHeadlessNoSandbox",
    "docs": "documentation build src/epub.js -f html -o documentation/html/",
    "docs:html": "documentation build src/epub.js -f html -o documentation/html/",
    "docs:md": "documentation build src/epub.js -f md -o documentation/md/API.md",
    "lint": "eslint -c .eslintrc.js src; exit 0",
    "dev": "vite",
    "build": "vite build",
    "build:min": "vite build --mode production",
    "preview": "vite preview",
    "prepare": "node build-all.js"
  },
  "author": "fchasen@gmail.com",
  "license": "BSD-2-Clause",
  "devDependencies": {
    "documentation": "^13.2.5",
    "eslint": "^8.0.1",
    "jsdoc": "^3.6.7",
    "karma": "^5.0.9",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^4.0.2",
    "mocha": "^7.2.0",
    "tsd-jsdoc": "^2.5.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "@types/localforage": "0.0.34",
    "core-js": "^3.18.3",
    "event-emitter": "^0.3.5",
    "jszip": "^3.7.1",
    "localforage": "^1.10.0",
    "lodash": "^4.17.21",
    "marks-pane": "^1.0.9",
    "path-webpack": "0.0.3"
  }
}